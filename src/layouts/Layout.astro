---
import '../styles/globals.css';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  image?: string;
  canonical?: string;
}

const { 
  title, 
  description = 'Desarrollo web profesional para tu negocio. Sitios web modernos, rápidos y optimizados para hacer crecer tu empresa.',
  keywords = 'desarrollo web, diseño web, sitios web profesionales, e-commerce, desarrollo sitios, SEO',
  image = '/og-image.jpg',
  canonical = Astro.url.pathname
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="dev studio" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="7 days" />
    
    {/* Canonical URL */}
    <link rel="canonical" href={new URL(canonical, Astro.site).href} />
    
    {/* Preconnect */}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />
    
    {/* Open Graph / Facebook */}
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site).href} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:site_name" content="dev studio" />
    
    {/* Twitter */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site).href} />
    
    {/* Schema.org - JSON-LD */}
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "dev studio",
      "url": Astro.site?.href,
      "logo": new URL("/logo.png", Astro.site)?.href,
      "description": description,
      "sameAs": [
        "https://www.linkedin.com/company/devstudio",
        "https://www.twitter.com/devstudio",
        "https://www.instagram.com/devstudio"
      ]
    })} />
    
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
      Ubuntu, Cantarell, sans-serif;
  }

  html {
    font-family: var(--font-sans);
    scroll-behavior: smooth;
  }

  code {
    font-family: Menlo, Monaco, 'Courier New', monospace;
  }
</style>
