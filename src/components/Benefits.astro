---
import { i18n, defaultLanguage } from '../config/i18n';
import LucideIcon from './icons/LucideIcon.astro';

interface Benefit {
  title: string;
  description: string;
  icon: string;
}

const lang = defaultLanguage;
const texts = i18n[lang];

// Map emoji icons to Lucide icons
const iconMap: Record<string, string> = {
  'âœ…': 'check',
  'ðŸ“': 'clipboard',
  'ðŸ’¬': 'heart',
  'ðŸ¤': 'headphones',
  'ðŸ“Š': 'trendingUp',
  'âœ¨': 'shield',
};

const benefits: Benefit[] = texts.benefits.items.map(item => ({
  ...item,
  icon: iconMap[item.icon] || item.icon,
}));
---

<section id="beneficios" class="py-16 md:py-24 lg:py-32 bg-slate-950" data-i18n="benefits">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-8 md:gap-12 lg:gap-16 items-center">
      {/* Left content */}
      <div>
        <span class="text-primary text-xs sm:text-sm font-medium tracking-wider uppercase mb-3 md:mb-4 block benefits-label">
          {texts.benefits.label}
        </span>
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-4 md:mb-6 text-foreground benefits-title">
          {texts.benefits.title}
        </h2>
        <p class="text-muted-foreground text-base sm:text-lg mb-8 benefits-description">
          {texts.benefits.description}
        </p>
        
        {/* Stats */}
        <div class="grid grid-cols-3 gap-3 md:gap-6 p-4 md:p-6 rounded-2xl bg-secondary/50 border border-border">
          {texts.benefits.stats.map((stat, index) => (
            <div class="text-center">
<div class="text-lg md:text-xl font-bold text-primary mb-1 benefits-stat-value">{stat.value}</div>
              <div class="text-xs text-muted-foreground benefits-stat-label">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>

      {/* Right - Benefits grid */}
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6">
        {
          benefits.map((benefit, index) => (
            <div
              class="p-4 md:p-6 rounded-xl border border-border bg-secondary/50 hover:bg-secondary hover:border-primary/30 transition-all benefits-item"
              data-benefit={index}
            >
              <div class="w-10 h-10 text-primary mb-3 md:mb-4 benefits-icon">
                <LucideIcon name={benefit.icon} size={28} strokeWidth={2} />
              </div>
              <h3 class="font-semibold text-foreground mb-2 text-sm md:text-base benefits-item-title">{benefit.title}</h3>
              <p class="text-xs md:text-sm text-muted-foreground leading-relaxed benefits-item-description">{benefit.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  import { i18n } from '../config/i18n';
  
  function updateBenefitsTexts() {
    const lang = (document.documentElement.dataset.lang as keyof typeof i18n) || 'es';
    const texts = i18n[lang];
    
    // Update label
    const labelEl = document.querySelector('.benefits-label');
    if (labelEl) labelEl.textContent = texts.benefits.label;
    
    // Update title
    const titleEl = document.querySelector('.benefits-title');
    if (titleEl) titleEl.textContent = texts.benefits.title;
    
    // Update description
    const descEl = document.querySelector('.benefits-description');
    if (descEl) descEl.textContent = texts.benefits.description;
    
    // Update stats
    const statValues = document.querySelectorAll('.benefits-stat-value');
    const statLabels = document.querySelectorAll('.benefits-stat-label');
    texts.benefits.stats.forEach((stat, index) => {
      if (statValues[index]) statValues[index].textContent = stat.value;
      if (statLabels[index]) statLabels[index].textContent = stat.label;
    });
    
    // Update benefits items
    const benefitItems = document.querySelectorAll('[data-benefit]');
    benefitItems.forEach((item, index) => {
      const titleEl = item.querySelector('.benefits-item-title');
      const descEl = item.querySelector('.benefits-item-description');
      
      if (titleEl) titleEl.textContent = texts.benefits.items[index]?.title || '';
      if (descEl) descEl.textContent = texts.benefits.items[index]?.description || '';
    });
  }
  
  // Update on language change
  document.addEventListener('languageChanged', updateBenefitsTexts);
  
  // Initial update
  updateBenefitsTexts();
</script>
