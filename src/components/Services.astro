---
import { i18n, defaultLanguage } from '../config/i18n';
import LucideIcon from './icons/LucideIcon.astro';

interface Service {
  icon: string;
  title: string;
  description: string;
}

const lang = defaultLanguage;
const texts = i18n[lang];

const services: Service[] = [
  {
    icon: 'globe',
    title: texts.services.items[0].title,
    description: texts.services.items[0].description,
  },
  {
    icon: 'shoppingCart',
    title: texts.services.items[1].title,
    description: texts.services.items[1].description,
  },
  {
    icon: 'smartphone',
    title: texts.services.items[2].title,
    description: texts.services.items[2].description,
  },
  {
    icon: 'zap',
    title: texts.services.items[3].title,
    description: texts.services.items[3].description,
  },
  {
    icon: 'search',
    title: texts.services.items[4].title,
    description: texts.services.items[4].description,
  },
  {
    icon: 'barChart3',
    title: texts.services.items[5].title,
    description: texts.services.items[5].description,
  },
];
---

<section
  id="servicios"
  class="py-16 md:py-24 lg:py-32 bg-slate-950"
  data-i18n="services"
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto text-center mb-12 md:mb-16">
      <span class="text-cyan-500 text-xs sm:text-sm font-medium tracking-wider uppercase mb-3 md:mb-4 block services-label">
        {texts.services.label}
      </span>
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-4 md:mb-6 services-title text-foreground">
        {texts.services.title}
      </h2>
      <p class="text-slate-400 text-base sm:text-lg px-2 services-description">
        {texts.services.description}
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
      {
        services.map((service, index) => (
          <div 
            class={"group p-6 md:p-8 rounded-2xl border border-slate-800 bg-slate-900/50 card-gradient card-shadow hover:border-cyan-500/50 hover:shadow-xl hover:shadow-cyan-500/10 transition-all duration-300 cursor-pointer focus-within:ring-2 focus-within:ring-cyan-500 opacity-0 translate-y-8 animate-fade-in-up"}
            style={{ animationDelay: `${index * 120}ms`, animationFillMode: 'forwards' }}
            data-service={index}
            role="article"
            aria-label={`Servicio: ${service.title}`}
          >
            <div class="w-12 h-12 rounded-xl bg-cyan-500/10 flex items-center justify-center mb-6 group-hover:bg-cyan-500/20 group-hover:scale-125 transition-transform duration-300 will-change-transform text-cyan-500" aria-hidden="true">
              <LucideIcon name={service.icon} size={24} strokeWidth={2} />
            </div>
            <h3 class="text-lg md:text-xl font-semibold text-white mb-3 group-hover:text-cyan-400 transition-colors duration-300">
              {service.title}
            </h3>
            <p class="text-slate-400 text-sm md:text-base leading-relaxed group-hover:text-slate-300 transition-colors duration-300">
              {service.description}
            </p>
            <div class="mt-4 pt-4 border-t border-slate-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <a href="#contacto" class="text-cyan-400 text-sm font-medium hover:text-cyan-300 inline-flex items-center gap-1 focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded px-2 py-1">
                Más información →
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <style>
  @keyframes fade-in-up {
    0% {
      opacity: 0;
      transform: translateY(32px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fade-in-up 0.7s cubic-bezier(0.22, 1, 0.36, 1) both;
  }
  </style>
  </div>
</section>

<script>
  import { i18n } from '../config/i18n';
  
  function updateServicesTexts() {
    const lang = (document.documentElement.dataset.lang as keyof typeof i18n) || 'es';
    const texts = i18n[lang];
    
    // Update label
    const labelEl = document.querySelector('.services-label');
    if (labelEl) labelEl.textContent = texts.services.label;
    
    // Update title
    const titleEl = document.querySelector('.services-title');
    if (titleEl) titleEl.textContent = texts.services.title;
    
    // Update description
    const descEl = document.querySelector('.services-description');
    if (descEl) descEl.textContent = texts.services.description;
    
    // Update service items
    const serviceElements = document.querySelectorAll('[data-service]');
    serviceElements.forEach((el, index) => {
      const titleEl = el.querySelector('h3');
      const descEl = el.querySelector('p');
      
      if (titleEl) titleEl.textContent = texts.services.items[index]?.title || '';
      if (descEl) descEl.textContent = texts.services.items[index]?.description || '';
    });
  }
  
  // Update on language change
  document.addEventListener('languageChanged', updateServicesTexts);
  
  // Initial update
  updateServicesTexts();
</script>
