---
import LucideIcon from './icons/LucideIcon.astro';
import ContactForm from './ContactForm.astro';
import { i18n, defaultLanguage } from '../config/i18n';

const lang = defaultLanguage;
const texts = i18n[lang];
---

<section id="contacto" class="py-16 md:py-24 lg:py-32 bg-gray-900 text-white relative overflow-hidden px-4 sm:px-6 lg:px-8" data-i18n="contact">
  <div class="max-w-6xl mx-auto relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 md:gap-12 lg:gap-16 items-center">
      <div class="text-center lg:text-left">
        {/* Icon */}
        <div class="w-14 md:w-16 h-14 md:h-16 mx-auto lg:mx-0 mb-6 md:mb-8 rounded-2xl bg-primary/10 flex items-center justify-center" aria-hidden="true">
          <LucideIcon name="mail" size={32} class="text-primary" />
        </div>

        {/* Headline */}
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-4 md:mb-6 px-2 contact-title">
          {texts.contact.title}
        </h2>

        {/* Description */}
        <p class="text-base sm:text-lg md:text-xl text-gray-300 mb-8 md:mb-10 max-w-2xl mx-auto lg:mx-0 px-2 contact-description">
          {texts.contact.description}
        </p>

        {/* CTA buttons */}
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-3 md:gap-4 px-2">
          <a 
            href="https://wa.me/34123456789?text=Hola%2C%20me%20gustar%C3%ADa%20agendar%20una%20llamada%20gratuita%20para%20consultar%20sobre%20tus%20servicios." 
            target="_blank"
            rel="noopener noreferrer"
            class="bg-primary text-primary-foreground glow px-6 md:px-8 py-2 md:py-3 text-base md:text-lg inline-flex items-center gap-2 w-full sm:w-auto justify-center focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition-all contact-cta"
            aria-label={texts.contact.cta}
          >
            {texts.contact.cta}
            <span aria-hidden="true">â†’</span>
          </a>
          <a 
            href={`mailto:${texts.contact.email}`}
            class="bg-gray-800 border border-gray-700 px-6 md:px-8 py-2 md:py-3 text-base md:text-lg w-full sm:w-auto text-center focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition-all"
            aria-label={texts.contact.email}
          >
            {texts.contact.email}
          </a>
        </div>

        {/* Trust note */}
        <p class="text-xs md:text-sm text-gray-400 mt-8 px-2 contact-trust">
          {texts.contact.trust}
        </p>
      </div>

      {/* Contact Form */}
      <div class="mt-16 md:mt-0">
        <ContactForm />
      </div>
    </div>
  </div>
</section>

<script>
  import { i18n } from '../config/i18n';
  
  function updateContactTexts() {
    const lang = (document.documentElement.dataset.lang as keyof typeof i18n) || 'es';
    const texts = i18n[lang];
    
    const titleEl = document.querySelector('.contact-title');
    if (titleEl) titleEl.textContent = texts.contact.title;
    
    const descEl = document.querySelector('.contact-description');
    if (descEl) descEl.textContent = texts.contact.description;
    
    const ctaEl = document.querySelector('.contact-cta');
    if (ctaEl) {
      ctaEl.firstChild!.textContent = texts.contact.cta + ' ';
    }
    
    const trustEl = document.querySelector('.contact-trust');
    if (trustEl) trustEl.textContent = texts.contact.trust;
  }
  
  document.addEventListener('languageChanged', updateContactTexts);
</script>
