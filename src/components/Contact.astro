---
import { i18n, defaultLanguage } from '../config/i18n';
import ContactForm from './ContactForm.astro';

interface Contact {
  title: string;
  description: string;
  ctaText: string;
  ctaUrl?: string;
}

const lang = defaultLanguage;
const texts = i18n[lang];

const contact: Contact = {
  title: texts.contact.title,
  description: texts.contact.description,
  ctaText: texts.contact.cta,
};
---

<section id="contacto" class="py-16 md:py-24 lg:py-32 bg-slate-900/50 relative overflow-hidden px-4 sm:px-6 lg:px-8" data-i18n="contact">
  <div class="max-w-6xl mx-auto relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 md:gap-12 lg:gap-16 items-center">
      <div class="text-center lg:text-left">
        {/* Icon */}
        <div class="w-14 md:w-16 h-14 md:h-16 mx-auto lg:mx-0 mb-6 md:mb-8 rounded-2xl bg-primary/10 flex items-center justify-center glow hover:scale-110 transition-transform duration-300" aria-hidden="true">
          <span class="text-2xl md:text-3xl animate-bounce-subtle">✉️</span>
        </div>

        {/* Headline */}
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-4 md:mb-6 px-2 contact-title text-foreground">
          {contact.title}
        </h2>

        {/* Description */}
        <p class="text-base sm:text-lg md:text-xl text-muted-foreground mb-8 md:mb-10 max-w-2xl mx-auto lg:mx-0 px-2 contact-description">
          {contact.description}
        </p>

        {/* CTA buttons */}
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-3 md:gap-4 px-2">
          <a 
            href="https://wa.me/34123456789?text=Hola%2C%20me%20gustar%C3%ADa%20agendar%20una%20llamada%20gratuita%20para%20consultar%20sobre%20tus%20servicios." 
            target="_blank"
            rel="noopener noreferrer"
            class="cta-primary glow px-6 md:px-8 py-2 md:py-3 text-base md:text-lg inline-flex items-center gap-2 w-full sm:w-auto justify-center focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition-all hover:scale-105 active:scale-95 contact-cta"
            aria-label={contact.ctaText}
          >
            {contact.ctaText}
            <span aria-hidden="true">→</span>
          </a>
          <a 
            href="mailto:contacto@christophervaldivia.tech" 
            class="cta-secondary px-6 md:px-8 py-2 md:py-3 text-base md:text-lg w-full sm:w-auto text-center focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition-all hover:scale-105 active:scale-95 contact-email"
            aria-label="Enviar email a contacto@christophervaldivia.tech"
          >
            contacto@christophervaldivia.tech
          </a>
        </div>

        {/* Trust note */}
        <p class="text-xs md:text-sm text-slate-500 mt-8 px-2 contact-trust">
          {texts.contact.trust}
        </p>
      </div>

      {/* Contact Form */}
      <div class="mt-16 md:mt-0">
        <ContactForm />
      </div>
    </div>
  </div>
</section>
