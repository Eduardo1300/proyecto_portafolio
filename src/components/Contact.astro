---
interface Contact {
  title: string;
  description: string;
  ctaText: string;
  ctaUrl?: string;
}

const contact: Contact = {
  title: '¿Listo para dar el siguiente paso?',
  description:
    'Cuéntame sobre tu proyecto. Sin compromiso, sin presión. Solo una conversación para ver cómo puedo ayudarte.',
  ctaText: 'Agendar llamada gratis',
};
---

<section
  id="contacto"
  class="py-24 bg-slate-950"
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    {/* Content */}
    <div class="text-center mb-12">
      <div class="w-12 h-12 bg-cyan-500/20 rounded-full flex items-center justify-center mx-auto mb-6">
        <span class="text-2xl">✉️</span>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        {contact.title}
      </h2>
      <p class="text-xl text-slate-400 mb-8 max-w-2xl mx-auto">
        {contact.description}
      </p>
    </div>

    {/* CTA Buttons */}
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
      <a
        href="#"
        class="cta-primary text-lg inline-flex items-center gap-2 w-fit mx-auto"
      >
        {contact.ctaText} <span>→</span>
      </a>
      <div class="text-white font-semibold text-lg">
        hola@devstudio.com
      </div>
    </div>

    {/* Secondary message */}
    <div class="text-center">
      <p class="text-slate-400 text-sm">
        Respondo en menos de 24 horas · Sin spam · 100% confidencial
      </p>
    </div>
  </div>
</section>
