---
import { i18n, defaultLanguage } from '../config/i18n';

interface Contact {
  title: string;
  description: string;
  ctaText: string;
  ctaUrl?: string;
}

const lang = defaultLanguage;
const texts = i18n[lang];

const contact: Contact = {
  title: texts.contact.title,
  description: texts.contact.description,
  ctaText: texts.contact.cta,
};
---

<section id="contacto" class="py-16 md:py-24 lg:py-32 bg-slate-900/50 relative overflow-hidden px-4 sm:px-6 lg:px-8" data-i18n="contact">
  {/* Background decoration - hidden from screen readers */}
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 sm:w-[500px] md:w-[600px] h-96 sm:h-[500px] md:h-[600px] bg-cyan-500/5 rounded-full blur-3xl animate-pulse-slow" />
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      {/* Icon */}
      <div class="w-14 md:w-16 h-14 md:h-16 mx-auto mb-6 md:mb-8 rounded-2xl bg-cyan-500/10 flex items-center justify-center glow hover:scale-110 transition-transform duration-300" aria-hidden="true">
        <span class="text-2xl md:text-3xl animate-bounce-subtle">✉️</span>
      </div>

      {/* Headline */}
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-4 md:mb-6 px-2 contact-title">
        {contact.title}
      </h2>

      {/* Description */}
      <p class="text-base sm:text-lg md:text-xl text-slate-400 mb-8 md:mb-10 max-w-2xl mx-auto px-2 contact-description">
        {contact.description}
      </p>

      {/* CTA buttons */}
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3 md:gap-4 px-2">
        <a 
          href="#" 
          class="cta-primary glow px-6 md:px-8 py-2 md:py-3 text-base md:text-lg inline-flex items-center gap-2 w-full sm:w-auto justify-center focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition-all hover:scale-105 active:scale-95 contact-cta"
          aria-label={contact.ctaText}
        >
          {contact.ctaText}
          <span aria-hidden="true">→</span>
        </a>
        <a 
          href="mailto:hola@devstudio.com" 
          class="cta-secondary px-6 md:px-8 py-2 md:py-3 text-base md:text-lg w-full sm:w-auto text-center focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded transition-all hover:scale-105 active:scale-95 contact-email"
          aria-label="Enviar email a hola@devstudio.com"
        >
          hola@devstudio.com
        </a>
      </div>

      {/* Trust note */}
      <p class="text-xs md:text-sm text-slate-500 mt-8 px-2 contact-trust">
        {texts.contact.trust}
      </p>
    </div>
  </div>

  {/* JSON-LD Schema para ContactPoint */}
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ContactPoint",
    "contactType": "Customer Service",
    "email": "hola@devstudio.com",
    "areaServed": "ES,AR,MX,CO,PE,CL",
    "availableLanguage": ["es", "en"]
  })} />
</section>

<script>
  import { i18n } from '../config/i18n';
  
  function updateContactTexts() {
    const lang = (document.documentElement.dataset.lang as keyof typeof i18n) || 'es';
    const texts = i18n[lang];
    
    // Update title
    const titleEl = document.querySelector('.contact-title');
    if (titleEl) titleEl.textContent = texts.contact.title;
    
    // Update description
    const descEl = document.querySelector('.contact-description');
    if (descEl) descEl.textContent = texts.contact.description;
    
    // Update CTA
    const ctaEl = document.querySelector('.contact-cta');
    if (ctaEl) {
      ctaEl.innerHTML = `${texts.contact.cta}<span aria-hidden="true">→</span>`;
      ctaEl.setAttribute('aria-label', texts.contact.cta);
    }
    
    // Update trust note
    const trustEl = document.querySelector('.contact-trust');
    if (trustEl) trustEl.textContent = texts.contact.trust;
  }
  
  // Update on language change
  document.addEventListener('languageChanged', updateContactTexts);
  
  // Initial update
  updateContactTexts();
</script>
