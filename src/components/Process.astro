---
interface ProcessStep {
  number: number;
  title: string;
  description: string;
}

const steps: ProcessStep[] = [
  {
    number: 1,
    title: 'Conversación inicial',
    description:
      'Entendemos tu negocio, objetivos y lo que necesitas. Sin compromiso, solo una charla para conocernos.',
  },
  {
    number: 2,
    title: 'Propuesta y diseño',
    description:
      'Creamos una propuesta clara con bocetos del diseño. Tú apruebas cada paso antes de continuar.',
  },
  {
    number: 3,
    title: 'Desarrollo',
    description:
      'Construimos tu sitio con las mejores tecnologías. Tienes acceso a una vista previa en todo momento.',
  },
  {
    number: 4,
    title: 'Lanzamiento',
    description:
      'Publicamos tu sitio y te enseñamos a usarlo. Soporte incluido para que nunca te quedes solo.',
  },
];
---

<section class="py-24 bg-slate-950">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <span class="section-label">PROCESO</span>
      <h2 class="section-heading">
        Simple, transparente, sin sorpresas
      </h2>
      <p class="section-subheading">
        Un proceso claro donde siempre sabrás en qué punto estamos y qué viene después.
      </p>
    </div>

    <div class="space-y-6">
      {
        steps.map((step) => (
          <div class="border border-slate-800 rounded-xl p-8 hover:border-cyan-500/50 transition-all duration-300 bg-slate-900/50">
            <div class="flex gap-6">
              <div class="text-6xl font-bold text-cyan-500 min-w-24">{step.number.toString().padStart(2, '0')}</div>
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <div class="w-2 h-2 bg-cyan-500 rounded-full"></div>
                  <h3 class="text-xl font-bold text-white">
                    {step.title}
                  </h3>
                </div>
                <p class="text-slate-400 leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
