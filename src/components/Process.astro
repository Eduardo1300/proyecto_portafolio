---
import { i18n, defaultLanguage } from '../config/i18n';

interface ProcessStep {
  number: string;
  title: string;
  description: string;
}

const lang = defaultLanguage;
const texts = i18n[lang];

const steps: ProcessStep[] = texts.process.steps;
---

<section id="proceso" class="py-16 md:py-24 lg:py-32 bg-slate-900/50" data-i18n="process">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto text-center mb-12 md:mb-16">
      <span class="text-cyan-500 text-xs sm:text-sm font-medium tracking-wider uppercase mb-3 md:mb-4 block process-label">
        {texts.process.label}
      </span>
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-4 md:mb-6 process-title">
        {texts.process.title}
      </h2>
      <p class="text-slate-400 text-base sm:text-lg px-2 process-description">
        {texts.process.description}
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="space-y-4 md:space-y-6">
        {
          steps.map((step, index) => (
            <div 
              class="relative flex gap-4 md:gap-6 lg:gap-10 p-5 md:p-6 lg:p-8 rounded-2xl border border-slate-800 bg-slate-900/50 hover:border-cyan-500/30 hover:shadow-lg hover:shadow-cyan-500/5 transition-all duration-300 group focus-within:ring-2 focus-within:ring-cyan-500"
              role="article"
              aria-label={`Paso ${index + 1}: ${step.title}`}
              data-step={index}
            >
              {/* Number */}
              <div class="flex-shrink-0 pt-1">
                <span 
                  class="text-4xl md:text-5xl lg:text-6xl font-bold text-gradient opacity-50 group-hover:opacity-100 group-hover:scale-110 transition-all duration-300 leading-none"
                  aria-hidden="true"
                >
                  {step.number}
                </span>
              </div>

              {/* Content */}
              <div class="flex-1 min-w-0">
                <h3 class="text-lg md:text-xl font-semibold text-white mb-2 md:mb-3 group-hover:text-cyan-400 transition-colors duration-300 process-step-title">
                  {step.title}
                </h3>
                <p class="text-slate-400 text-sm md:text-base leading-relaxed group-hover:text-slate-300 transition-colors duration-300 process-step-description">
                  {step.description}
                </p>
              </div>

              {/* Connector line */}
              {index < steps.length - 1 && (
                <div class="absolute left-8 md:left-12 top-full h-4 md:h-6 w-px bg-gradient-to-b from-slate-700 to-transparent transition-all duration-300 group-hover:from-cyan-500/50" aria-hidden="true" />
              )}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  import { i18n } from '../config/i18n';
  
  function updateProcessTexts() {
    const lang = (document.documentElement.dataset.lang as keyof typeof i18n) || 'es';
    const texts = i18n[lang];
    
    // Update label
    const labelEl = document.querySelector('.process-label');
    if (labelEl) labelEl.textContent = texts.process.label;
    
    // Update title
    const titleEl = document.querySelector('.process-title');
    if (titleEl) titleEl.textContent = texts.process.title;
    
    // Update description
    const descEl = document.querySelector('.process-description');
    if (descEl) descEl.textContent = texts.process.description;
    
    // Update process steps
    const stepElements = document.querySelectorAll('[data-step]');
    stepElements.forEach((el, index) => {
      const titleEl = el.querySelector('.process-step-title');
      const descEl = el.querySelector('.process-step-description');
      
      if (titleEl) titleEl.textContent = texts.process.steps[index]?.title || '';
      if (descEl) descEl.textContent = texts.process.steps[index]?.description || '';
    });
  }
  
  // Update on language change
  document.addEventListener('languageChanged', updateProcessTexts);
  
  // Initial update
  updateProcessTexts();
</script>
