<header class="fixed top-0 left-0 right-0 z-50 border-b border-slate-800/50 bg-slate-950/80 backdrop-blur-xl">
  <div class="max-w-6xl mx-auto px-3 sm:px-4 md:px-6 lg:px-8 h-14 md:h-16 flex items-center justify-between">
    {/* Logo */}
    <a href="/" class="text-base md:text-xl font-bold text-white whitespace-nowrap">
      dev<span class="text-gradient">studio</span>
    </a>

    {/* Navigation */}
    <nav class="hidden md:flex items-center gap-4 lg:gap-8">
      <a href="#servicios" class="text-xs lg:text-sm text-slate-400 hover:text-white transition-colors">
        Servicios
      </a>
      <a href="#proceso" class="text-xs lg:text-sm text-slate-400 hover:text-white transition-colors">
        Proceso
      </a>
      <a href="#beneficios" class="text-xs lg:text-sm text-slate-400 hover:text-white transition-colors">
        Beneficios
      </a>
      <a href="#faq" class="text-xs lg:text-sm text-slate-400 hover:text-white transition-colors">
        FAQ
      </a>
      <a
        href="#contacto"
        class="cta-primary glow px-4 lg:px-6 py-2 text-xs lg:text-sm"
      >
        Contactar
      </a>
    </nav>

    {/* Mobile menu button */}
    <button class="md:hidden text-white text-xl" id="mobile-menu">
      â˜°
    </button>
  </div>

  {/* Mobile menu */}
  <nav
    id="mobile-nav"
    class="hidden md:hidden border-t border-slate-800 bg-slate-950"
  >
    <div class="px-3 sm:px-4 py-3 space-y-2">
      <a
        href="#servicios"
        class="block text-sm text-slate-400 hover:text-white py-2"
      >
        Servicios
      </a>
      <a
        href="#proceso"
        class="block text-sm text-slate-400 hover:text-white py-2"
      >
        Proceso
      </a>
      <a
        href="#beneficios"
        class="block text-sm text-slate-400 hover:text-white py-2"
      >
        Beneficios
      </a>
      <a
        href="#faq"
        class="block text-sm text-slate-400 hover:text-white py-2"
      >
        FAQ
      </a>
      <a
        href="#contacto"
        class="block cta-primary text-center py-2 mt-2 text-sm"
      >
        Contactar
      </a>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu');
  const mobileNav = document.getElementById('mobile-nav');

  if (mobileMenuBtn && mobileNav) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileNav.classList.toggle('hidden');
    });

    // Close menu when clicking a link
    const links = mobileNav.querySelectorAll('a');
    links.forEach((link) => {
      link.addEventListener('click', () => {
        mobileNav.classList.add('hidden');
      });
    });
  }
</script>
