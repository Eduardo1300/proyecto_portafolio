<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-slate-200">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
    {/* Logo */}
    <a href="/" class="text-2xl font-bold text-blue-600">
      DevWeb
    </a>

    {/* Navigation */}
    <nav class="hidden md:flex items-center gap-8">
      <a href="#servicios" class="text-slate-600 hover:text-slate-900 transition">
        Servicios
      </a>
      <a href="#proceso" class="text-slate-600 hover:text-slate-900 transition">
        Proceso
      </a>
      <a href="#preguntas" class="text-slate-600 hover:text-slate-900 transition">
        Preguntas
      </a>
      <a
        href="#contacto"
        class="cta-primary"
      >
        Contactar
      </a>
    </nav>

    {/* Mobile menu button */}
    <button class="md:hidden text-slate-900" id="mobile-menu">
      â˜°
    </button>
  </div>

  {/* Mobile menu */}
  <nav
    id="mobile-nav"
    class="hidden md:hidden border-t border-slate-200 bg-white"
  >
    <div class="px-4 py-4 space-y-4">
      <a
        href="#servicios"
        class="block text-slate-600 hover:text-slate-900"
      >
        Servicios
      </a>
      <a
        href="#proceso"
        class="block text-slate-600 hover:text-slate-900"
      >
        Proceso
      </a>
      <a
        href="#preguntas"
        class="block text-slate-600 hover:text-slate-900"
      >
        Preguntas
      </a>
      <a
        href="#contacto"
        class="block cta-primary text-center"
      >
        Contactar
      </a>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu');
  const mobileNav = document.getElementById('mobile-nav');

  if (mobileMenuBtn && mobileNav) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileNav.classList.toggle('hidden');
    });

    // Close menu when clicking a link
    const links = mobileNav.querySelectorAll('a');
    links.forEach((link) => {
      link.addEventListener('click', () => {
        mobileNav.classList.add('hidden');
      });
    });
  }
</script>
