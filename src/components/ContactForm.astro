---
const formTexts = {
  es: {
    name: { label: 'Nombre', placeholder: 'Tu nombre' },
    email: { label: 'Correo electrónico', placeholder: 'Tu correo electrónico' },
    message: { label: 'Mensaje', placeholder: '¿En qué te puedo ayudar?' },
    submit: 'Enviar mensaje',
  },
  en: {
    name: { label: 'Name', placeholder: 'Your name' },
    email: { label: 'Email', placeholder: 'Your email' },
    message: { label: 'Message', placeholder: 'How can I help you?' },
    submit: 'Send message',
  },
};

const lang = typeof document !== 'undefined' && document.documentElement.lang === 'en' ? 'en' : 'es';
const texts = formTexts[lang];
---
<form 
  name="contact"
  method="POST" 
  action="/success"
  data-netlify="true"
  data-netlify-honeypot="bot-field"
  class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8"
>
  <input type="hidden" name="form-name" value="contact" />
  <p class="hidden">
    <label>
      Don’t fill this out if you’re human: <input name="bot-field" />
    </label>
  </p>
  
  <div class="sm:col-span-2">
    <label for="name" class="block text-sm font-medium text-foreground">{texts.name.label}</label>
    <div class="mt-1">
      <input 
        type="text" 
        name="name" 
        id="name" 
        autocomplete="name" 
        class="py-3 px-4 block w-full shadow-sm bg-background border-border rounded-md focus:ring-primary focus:border-primary" 
        placeholder={texts.name.placeholder}
        required
      />
    </div>
  </div>
  
  <div class="sm:col-span-2">
    <label for="email" class="block text-sm font-medium text-foreground">{texts.email.label}</label>
    <div class="mt-1">
      <input 
        id="email" 
        name="email" 
        type="email" 
        autocomplete="email" 
        class="py-3 px-4 block w-full shadow-sm bg-background border-border rounded-md focus:ring-primary focus:border-primary"
        placeholder={texts.email.placeholder}
        required 
      />
    </div>
  </div>
  
  <div class="sm:col-span-2">
    <label for="message" class="block text-sm font-medium text-foreground">{texts.message.label}</label>
    <div class="mt-1">
      <textarea 
        id="message" 
        name="message" 
        rows={4} 
        class="py-3 px-4 block w-full shadow-sm bg-background border-border rounded-md focus:ring-primary focus:border-primary"
        placeholder={texts.message.placeholder}
        required
      ></textarea>
    </div>
  </div>
  
  <div class="sm:col-span-2">
    <button 
      type="submit" 
      class="w-full inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-primary-foreground bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
    >
      {texts.submit}
    </button>
  </div>
</form>