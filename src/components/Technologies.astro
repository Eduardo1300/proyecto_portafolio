---
import { i18n, defaultLanguage } from '../config/i18n';

interface Technology {
  name: string;
  description: string;
  icon: string;
}

const lang = defaultLanguage;
const texts = i18n[lang];

const technologies: Technology[] = texts.technologies.items;
---

<section id="tecnologias" class="py-16 md:py-24 lg:py-32 bg-slate-900/50" data-i18n="technologies">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    {/* Section header */}
    <div class="max-w-2xl mx-auto text-center mb-12 md:mb-16">
      <span class="text-primary text-xs sm:text-sm font-medium tracking-wider uppercase mb-3 md:mb-4 block tech-label">
        {texts.technologies.label}
      </span>
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-4 md:mb-6 text-foreground tech-title">
        {texts.technologies.title}
      </h2>
      <p class="text-muted-foreground text-base sm:text-lg px-2 tech-description">
        {texts.technologies.description}
      </p>
    </div>

    {/* Tech grid */}
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-3 md:gap-4">
      {
        technologies.map((tech, index) => (
          <div
            class="group p-4 md:p-6 rounded-2xl border border-border bg-secondary/50 text-center hover:border-primary/50 hover:bg-primary/5 transition-all tech-item"
            data-tech={index}
          >
            <div class="w-12 md:w-16 h-12 md:h-16 mx-auto mb-3 md:mb-4 rounded-xl bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center group-hover:from-primary/30 group-hover:to-primary/10 transition-all">
              <span class="text-lg md:text-2xl font-bold text-primary tech-icon">{tech.icon}</span>
            </div>
            <h3 class="font-semibold text-foreground mb-1 text-sm md:text-base tech-name">{tech.name}</h3>
            <p class="text-xs text-muted-foreground tech-description-short">{tech.description}</p>
          </div>
        ))
      }
    </div>

    {/* Note */}
    <p class="text-center text-xs md:text-sm mt-10 md:mt-12 max-w-xl mx-auto px-2 tech-disclaimer" style="color: hsl(var(--foreground));">
      {texts.technologies.disclaimer}
    </p>
  </div>
</section>

<script>
  import { i18n } from '../config/i18n';
  
  function updateTechnologiesTexts() {
    const lang = (document.documentElement.dataset.lang as keyof typeof i18n) || 'es';
    const texts = i18n[lang];
    
    // Update label
    const labelEl = document.querySelector('.tech-label');
    if (labelEl) labelEl.textContent = texts.technologies.label;
    
    // Update title
    const titleEl = document.querySelector('.tech-title');
    if (titleEl) titleEl.textContent = texts.technologies.title;
    
    // Update description
    const descEl = document.querySelector('.tech-description');
    if (descEl) descEl.textContent = texts.technologies.description;
    
    // Update disclaimer
    const disclaimerEl = document.querySelector('.tech-disclaimer');
    if (disclaimerEl) disclaimerEl.textContent = texts.technologies.disclaimer;
    
    // Update tech items
    const techItems = document.querySelectorAll('[data-tech]');
    techItems.forEach((item, index) => {
      const iconEl = item.querySelector('.tech-icon');
      const nameEl = item.querySelector('.tech-name');
      const descEl = item.querySelector('.tech-description-short');
      
      if (iconEl) iconEl.textContent = texts.technologies.items[index]?.icon || '';
      if (nameEl) nameEl.textContent = texts.technologies.items[index]?.name || '';
      if (descEl) descEl.textContent = texts.technologies.items[index]?.description || '';
    });
  }
  
  // Update on language change
  document.addEventListener('languageChanged', updateTechnologiesTexts);
  
  // Initial update
  updateTechnologiesTexts();
</script>
